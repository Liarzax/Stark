<!--
    Document   : mainMenu.xml
    Created on : March 27, 2012, 3:57 PM
    Author     : Viorel Iliescu
    Description:
        Purpose of the document follows;
        Allow the player to Select a New Profile, or Load a Profile from Save.
-->

<nifty  xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" 
        xmlns:xsi="http://www.w3.org/2001/XML-Schema-instance"
        xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd 
        http://nifty-gui.sourceforge.net/nifty.xsd">
            
    <!-- Controls buttons or something? dont need on like loading screens, etc -->
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    
    <screen id="screenSelectProfile">
        <!-- #### TESTING STUFF IN HERE #### -->
        <layer id="background" backgroundColor="#000f">
            <!-- background layer, Picture etc... -->
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <!-- forground layer, Buttons etc... -->
            <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center" backgroundColor="#0f08">
                <control name="label" color="#000" text="Select a Profile!" width="100%" height="100%"> </control>
            </panel>
            
            <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="vertical" backgroundColor="#0f08">
                <panel id="panel_mid_1" height="20%" width="100%" valign="center" childLayout="center" backgroundColor="#40f8">
                    <control name="label" color="#000" text="Available Profiles..." width="100%" height="100%"> </control>
                </panel>
                <panel id="panel_mid_2" height="80%" width="100%" valign="center" childLayout="horizontal" backgroundColor="#44f8">
                    <panel id="button1" height="20%" width="25%" valign="center" childLayout="center" backgroundColor="#0f08">
                        <!-- Profile 1 Button -->
                        <control name="button" label="Profile 1" id="p1Button" align="center" valign="center" visibleToMouse="true"> 
                            <interact onClick="selectProfile(1)"/>
                        </control>
                    </panel>
                    
                    <panel id="button2" height="20%" width="25%" valign="center" childLayout="center" backgroundColor="#00f8">
                        <!-- Profile 2 Button -->
                        <control name="button" label="Profile 2" id="p2Button" align="center" valign="center" visibleToMouse="true"> 
                            <interact onClick="selectProfile(2)"/>
                        </control>
                    </panel>
                    
                    <panel id="button3" height="20%" width="25%" valign="center" childLayout="center" backgroundColor="#44f8">
                        <!-- Profile 3 Button -->
                        <control name="button" label="Profile 3" id="p3Button" align="center" valign="center" visibleToMouse="true"> 
                            <interact onClick="selectProfile(3)"/>
                        </control>
                    </panel>
                        
                    <panel id="button4" height="20%" width="25%" valign="center" childLayout="center" backgroundColor="#40f8">
                        <!-- Profile 1 Button -->
                        <control name="button" label="Profile 4" id="p4Button" align="center" valign="center" visibleToMouse="true"> 
                            <interact onClick="selectProfile(4)"/>
                        </control>
                    </panel>
                </panel>
            </panel>
            
            <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal" backgroundColor="#00f8" visibleToMouse="true">
                <panel id="panel_bottom_1" height="50%" width="25%" valign="center" childLayout="center" backgroundColor="#44f8">
                    <!-- New Profile Button -->
                    <control name="button" label="Select Profile" id="selectButton" align="center" valign="center" visibleToMouse="true"> 
                        <interact onClick="selectButton()"/>
                    </control>
                </panel>
                
                <panel id="panel_bottom_2" height="50%" width="25%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <!-- Select Profile Button -->
                    <control name="button" label="New Profile" id="newButton" align="center" valign="center" visibleToMouse="true"> 
                        <interact onClick="newButton()"/>
                    </control>
                </panel>
                
                <panel id="panel_bottom_3" height="50%" width="25%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <!-- Delete Profile Button -->
                    <control name="button" label="Delete Profile" id="deleteButton" align="center" valign="center" visibleToMouse="true"> 
                        <interact onClick="deleteButton()"/>
                    </control>
                </panel>
                
                <panel id="panel_bottom_4" height="50%" width="25%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <!-- Delete Profile Button -->
                    <control name="button" label="Back" id="backButton" align="center" valign="center" visibleToMouse="true"> 
                        <interact onClick="backButton()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>

</nifty>
