<nifty  xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" 
        xmlns:xsi="http://www.w3.org/2001/XML-Schema-instance"
        xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd 
        http://nifty-gui.sourceforge.net/nifty.xsd">
            
    <!-- Controls buttons or something? dont need on like loading screens, etc -->
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    
    <screen id="screenMultiplayer" controller="projectStark.ScreenMultiplayer">
        <!-- Background = Black -->
        <layer id="background" backgroundColor="#000f">
            <!-- background layer, Picture etc... -->
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <!-- forground layer, Buttons etc... -->
            <!-- Red Panel -->
            <panel id="panel_top" height="20%" width="75%" align="center" childLayout="center" backgroundColor="#f008">
                <control name="label" color="#000" text="MultiPlayer Awsome Ness!" width="100%" height="100%" />
            </panel>
            
            
            <!-- Green Panel -->
            <panel id="panel_mid" height="65%" width="75%" align="center" childLayout="horizontal" backgroundColor="#0f08">
                <panel id="panel_buttons" height="50%" width="30%" valign="center" childLayout="vertical" backgroundColor="#44f8">
                <!-- Left Buttons -->
                    <control name="button" label="Start Server" id="startServer" align="center" valign="center">
                        <interact onClick="startServer()"/>
                    </control>
                
                    <control name="button" label="Stop Server" id="stopServer" align="center" valign="center">
                        <interact onClick="stopServer()"/>
                    </control>
                
                    <control name="button" label="Join Server" id="joinServer" align="center" valign="center">
                        <interact onClick="joinServer()"/>
                    </control>
                
                    <control name="button" label="Dis-Connect" id="disconnectFromServer" align="center" valign="center">
                        <interact onClick="disconnectFromServer()"/>
                    </control>
                </panel>
                
                <!-- Right ChatScreen -->
                <panel id="panel_chat" height="100%" width="70%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <control name="textfield" id="chatField" color="#000" text="Chat Field" width="98%" height="98%"/>
                    
                </panel>
            </panel>
            
            <!-- Blue Panel -->
            <panel id="panel_bottom" height="15%" width="75%" align="center" childLayout="vertical" backgroundColor="#00f8">
                <panel id="panel_chat" height="50%" width="100%" valign="center" childLayout="horizontal" backgroundColor="#44f8">
                    <!-- Chat Line -->
                    <panel id="panel_chat" height="100%" width="70%" valighn="center" childLayout="center" backgroundColor="#77f8">
                        <!-- Chat Bar??? -->
                        <control name="textfield" id="chatBar" color="#000" text="Chat Bar Here" width="98%" height="82%"/>
                        
                    </panel>
                    
                    <!-- Send Button -->
                    <panel id="panel_send" height="100%" width="30%" valighn="center" childLayout="center" backgroundColor="#44f8">
                        <control name="button" label="Send" id="sendButton" align="center" valign="center">
                            <interact onClick="sendMessage()"/>
                        </control>
                    </panel>
                </panel>
                
                <panel id="panel_back" height="50%" width="100%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <!-- Back Button -->
                    <control name="button" label="Back" id="backButton" align="left" valign="center">
                        <interact onClick="backButton()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    
    
</nifty>
