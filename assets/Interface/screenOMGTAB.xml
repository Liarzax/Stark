<nifty  xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" 
        xmlns:xsi="http://www.w3.org/2001/XML-Schema-instance"
        xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd 
        http://nifty-gui.sourceforge.net/nifty.xsd">
            
    <!-- Controls buttons or something? dont need on like loading screens, etc -->
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    
    <screen id="OMGTAB" controller="projectStark.ScreenOMGTAB">
        <!-- #### TESTING STUFF IN HERE #### -->
        <layer id="background" backgroundColor="#000f">
            <!-- background layer, Picture etc... -->
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <!-- forground layer, Buttons etc... -->
            <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center" backgroundColor="#f008">
                <!--- Title etc? -->
                <control name="label" color="#000" text="Sexy Space Menu" width="100%" height="100%" />
            </panel>
            
            <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="vertical" backgroundColor="#0f08">
                <!--- Mid Area -->
                <!-- Veriable -->
                <panel id="panel_mid_top" height="40%" width="80%" valign="center" childLayout="center" backgroundColor="#44f8">
                    <!-- Veriable // Thats not changing!!! it should change on buttons pressed! -->
                    <control name="text" id="text" align="center" valign="center" visibleToMouse="true" >
                    <!--<text text="Number : ${CALL.getTemp()} !" font="Interface/Fonts/Default.fnt" width="100%" height="100%" />-->
                    <text text="text" font="Interface/Fonts/Default.fnt" width="100%" height="100%" />
                    </control>
                </panel>  

                <!-- Empty Space -->
                <panel id="panel_mid_mid1" height="20%" width="80%" valign="center" childLayout="center" backgroundColor="#44f8">
                </panel>
                
                <!-- Increase Button -->
                <panel id="panel_mid_mid2" height="20%" width="80%" valign="center" childLayout="center" backgroundColor="#44f8">
                    <control name="button" label="UP" id="upButton" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="upButton()"/>
                    </control>
                </panel>  
                
                <!-- deCrease Button -->
                <panel id="panel_mid_bottom" height="20%" width="80%" valign="center" childLayout="center" backgroundColor="#44f8">
                    <control name="button" label="DOWN" id="downButton" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="downButton()"/>
                    </control>
                </panel>                
                
            </panel>
            
            <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal" backgroundColor="#00f8">
                <!-- Bottom Area -->
                <panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center" backgroundColor="#44f8">
                    <!-- Other Button -->
                    <control name="button" label="ButtonText" id="Button" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="tempButton()"/>
                    </control>
                </panel>
                
                <panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <!-- Close Button -->
                    <control name="button" label="Close Menu" id="CloseButton" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="closeMenu()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>

</nifty>
