<nifty  xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" 
        xmlns:xsi="http://www.w3.org/2001/XML-Schema-instance"
        xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd 
        http://nifty-gui.sourceforge.net/nifty.xsd">
            
    <!-- Controls buttons or something? dont need on like loading screens, etc -->
    <useControls filename="nifty-default-controls.xml" />
    <useStyles filename="nifty-default-styles.xml" />
    
    <screen id="screenStart" controller="projectStark.ScreenStart">
        <!-- #### TESTING STUFF IN HERE #### -->
        <layer id="background" backgroundColor="#000f">
            <!-- background layer, Picture etc... -->
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <!-- forground layer, Buttons etc... -->
            <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center" backgroundColor="#f008">
                <!--- Title etc? -->
                <control name="label" color="#000" text="Sexy Space GAME Title!" width="100%" height="100%" />
            </panel>
            
            <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="center" backgroundColor="#0f08">
                <!--- How To Play? etc? -->
                <control name="label" color="#000" text="How To Play - Ship Selection: LMB Click on your Ship. Target Enemy: With ship selected, left click on enemy. Movement: With ship selected, Click within white square area. Deselect Ship: Left click on empty space, or right click. Camera Movement: W - Forward,S - Backward,A - Strafe Left,D - Strafe Right, Drag the mouse with LMB to rotate the Camera. Points: hit the [Space Bar] Key. Saving: The Game Autosaves When you Exit" 
                font="Interface/Fonts/Default.fnt" width="80%" height="100%" wrap="true" />
            </panel>
            
            <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal" backgroundColor="#00f8">
                <panel id="panel_bottom_left" height="50%" width="33%" valign="center" childLayout="center" backgroundColor="#44f8">
                    <!-- Start Button -->
                    <control name="button" label="Start" id="startButton" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="startGame()"/>
                    </control>
                </panel>
                
                <panel id="panel_bottom_middle" height="50%" width="33%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <!-- Multiplayer Button -->
                    <control name="button" label="Multiplayer" id="multiplayerButton" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="goToMLobby()"/>
                    </control>
                </panel>
                
                <panel id="panel_bottom_right" height="50%" width="33%" valign="center" childLayout="center" backgroundColor="#88f8">
                    <!-- Quit Button -->
                    <control name="button" label="Quit" id="quitButton" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="quitGame()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
    
</nifty>
